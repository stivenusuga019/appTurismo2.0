<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pajaros">

    <ImageView
        android:id="@+id/fotoRestaurate1"
        android:layout_width="430dp"
        android:layout_height="430dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nombreRestaurante1"
        android:src="@drawable/restaurante2"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/nombreRestaurante1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fotoRestaurate1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/descipcionRestaurante1"
        android:text="Bon appÃ©titl"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:ignore="NotSibling" />
    <TextView
        android:id="@+id/descipcionRestaurante1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nombreRestaurante1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/precioRestaurantel1"
        android:text="@string/desRestaurante1"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:ignore="NotSibling" />
    <TextView
        android:id="@+id/precioRestaurantel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descipcionRestaurante1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=" $ 8.000 - $ 30.000COP"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

</android.support.constraint.ConstraintLayout>